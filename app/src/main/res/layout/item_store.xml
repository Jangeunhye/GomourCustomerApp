<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.santaistiger.gomourcustomerapp.data.model.Store" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <ImageView
                android:id="@+id/iv_stopover"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="8dp"
                app:srcCompat="@drawable/store" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:orientation="vertical"
                android:paddingVertical="5dp" >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_store_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:hint="주문 장소를 입력하려면 클릭하세요"
                    android:text="@{item.place.getDisplayName}"
                    android:layout_marginBottom="5dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:textSize="14dp"
                    android:hint="요청사항 입력"
                    android:text="@={item.menu}"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/ib_del_item"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:paddingHorizontal="8dp"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/btn_delete_store" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>